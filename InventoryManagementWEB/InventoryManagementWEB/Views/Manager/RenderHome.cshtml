@{
    ViewBag.Title = "Home";
}

<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<script src="~/CustomScripts/Manager/ManagerModule.js"></script>
<script src="~/CustomScripts/Manager/ManagerController.js"></script>
<div class="header" ng-app="ManagerApp">
    <div class="head-strip" style="padding:0.5% 0 0 0;" ng-controller="ManagerController">
        <div class="head-strip-left" style="padding: 1%;margin-top:1.5%;">
            <span class="joe"><img src="~/Images/1.png" alt=""> </span>
            <div class="joe-text">

                <h2>Welcome  {{name}}</h2>
            </div>
        </div>

        <div id="horizontalTab" class="head-strip-left-nowidth" style="margin:1%;">
            <ul class="resp-tabs-list" style="width:50%;margin-left: 41%;margin-top: -5.6%;">
                <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span class="cal"> </span><h4>Issues</h4></li>
                <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span class="cal"> </span><h4>Assets</h4></li>
                <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span class="cal"> </span><h4>History</h4></li>
            </ul>
            <div class="resp-tabs-container">
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                    <div class="facts" style="background-color:#eeeeee;">
                        <ul class="tab_list">


                            <div style="background-color:white">
                                @Html.Partial("~/Views/Manager/RenderIssues.cshtml");
                            </div>
                        </ul>
                    </div>
                </div>

                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                    <div class="facts" style="background-color:#eeeeee;">
                        <ul class="tab_list">


                            <div style="background-color:white">
                                @Html.Partial("~/Views/Manager/RenderAssets.cshtml");
                            </div>
                        </ul>
                    </div>
                </div>


                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                    <div class="facts" style="background-color:#eeeeee">
                        <ul class="tab_list">

                            <div style="background-color:white">


                                @*RenderBody history*@
                                @Html.Partial("~/Views/Manager/RenderHistory.cshtml");

                            </div>

                        </ul>
                    </div>
                </div>

            </div>


            <div class="clearfix"> </div>
        </div>

        <div class="settiing" style="background-color: #2b3042;">
            <div class="menu2">
                <span class="menu-at-on"><img src="~/Images/logout2.png" alt=""> </span>
                <ul>
                    <li><a href="#">Log Out</a></li>
                </ul>
                <script>
						$("span.menu-at-on").click(function(){
							$(".menu2 ul").slideToggle(500, function(){
							});
						});
                </script>
            </div>
        </div>
    </div>

    <div class="clearfix"> </div>
</div>
